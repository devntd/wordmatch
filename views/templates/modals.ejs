<!-- Settings -->
<div class="game-settings modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Game Settings</h4>
            </div>
            <div class="modal-body">
                <h3>Single Player</h3>
                <div class="radio">
                    <label>
                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="normal" <% if(gamePlay == 'normal'){ %>checked<% } %>>Normal Play
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="random" <% if(gamePlay == 'random'){ %>checked<% } %>>Random Play
                    </label>
                </div>
                <hr>
                <h3>Multiple Player</h3>
                <div class="radio">
                    <label>
                        <input type="radio" name="optionsRadios" id="optionsRadios3" value="multiplayer" <% if(gamePlay == 'multiplayer'){ %>checked<% } %>>Multiplayer
                    </label>
                    <div class="setting-multiplayer">
                        <input id="name-player" type="text" class="form-control" placeholder="<%= playerName %>">
                        <span id="name-player-tooltip" class="tooltip"></span>
                        <div class="radio">
                            <span>Number of players</span>
                            <label class="radio-inline">
                                <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="2" <% if(playerNumber == 2){ %> checked <% }%>> 2
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="3" <% if(playerNumber == 3){ %> checked <% }%>> 3
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="4" <% if(playerNumber == 4){ %> checked <% }%>> 4
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="setting-save" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Game Over -->
<div class="game_over modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">GAME OVER!</h4>
            </div>
            <div class="modal-body">
                <div class="final-score">
                    <span>YOUR SCORE</span>
                    <span class="your-score">0</span>
                </div>
                <div class="social-button">
                    <div class="share-button facebook" data-href="https://www.facebook.com/sharer/sharer.php?u=http://wordmatch.org/result/"><i class="fa fa-facebook"></i>&nbsp;&nbsp;Share on Faceboook</div>
                    <!--<div class="share-button google" data-href=""><i class="fa fa-google-plus"></i>&nbsp;&nbsp;Share on Google Plus</div>
                    <div class="share-button twitter" data-href=""><i class="fa fa-twitter"></i>&nbsp;&nbsp;Share on Twitter</div>-->
                </div>
                <hr>
                <div class="form-group player-name">
                    <input type="text" class="form-control" id="player-name-input" placeholder="<%= playerName %>">
                    <span id="input-name-tooltip" class="tooltip"></span>
                    <i class="add-success fa fa-check-circle"></i>
                </div>
                <div class="top-ten">
                    <table class="table table-striped" id="table-rank">
                        <!-- Score Board -->
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Us -->
